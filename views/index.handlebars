<h1>Burgers!</h1>

<div class="burgs">
  <h2>Burgers to be Devoured!</h2>

  <ul >
    {{#each burgers}}
      {{#unless devoured}}
        <li>
          {{name}}
          <button class="eat" data-id="{{id}}">
            Devour the Burger!
          </button>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
</div>
<div class="burgs">
  <h2>Devoured Burgers!</h2>

  <ul>
    {{#each burgers}}
      {{#if devoured}}
        <li>{{name}}</li>
      {{/if}}
    {{/each}}
  </ul>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Name of Burger:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

